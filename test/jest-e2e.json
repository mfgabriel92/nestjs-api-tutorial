{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@src/(.*)$": "<rootDir>/../src/$1",
    "@auth/(.*)$": "<rootDir>/../src/auth/$1",
    "@bookmark/(.*)$": "<rootDir>/../src/bookmark/$1",
    "@database/(.*)$": "<rootDir>/../src/database/$1",
    "@user/(.*)$": "<rootDir>/../src/user/$1"
  }
}